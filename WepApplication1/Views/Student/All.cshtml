@model List<Student>

<table class ="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>DepartmentId</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            string[] arr = { "table-success", "table-danger", "table-info", "table-warning", "table-active" };
            int counter = -1;
        }
        @foreach(var item in Model)
        {
            if (counter == 4) { counter = -1; }
            counter++;
            <tr class="@arr[counter]">
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.DepartmentId</td>
                <td><a asp-Controller="Student" asp-action="Delete"
                    asp-route-id="@item.Id" class="btn btn-danger">Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>